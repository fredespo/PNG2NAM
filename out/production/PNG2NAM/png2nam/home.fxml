<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="png2nam.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">

    <VBox GridPane.columnIndex="4"
          GridPane.rowIndex="3"
          spacing="40">

        <HBox spacing="10">

            <Label text="Input Image:" style="-fx-font-size: 20px"/>

            <VBox alignment="center">
                <Label  fx:id="inputImageName"
                        text="" 
                        maxWidth="500"/>  
            </VBox>  

            <Button text="Choose"
                    onAction="#handleChooseImage"/>          
        </HBox>


        <HBox spacing="10">

            <Label text="Output Directory:" style="-fx-font-size: 20px"/>

            <VBox alignment="center">
                <Label fx:id="outputDirectoryName"
                    text=""
                     maxWidth="500"/>
            </VBox>       

            <Button text="Choose"
                    onAction="#handleChooseOutputDir"/>       

        </HBox>



        <HBox spacing="10">

            <Label text="Export Options:" style="-fx-font-size: 20px"/>

            <VBox spacing="10">

                <CheckBox text="CHR"
                          selected="true"
                          fx:id="exportCHR"/>

                <CheckBox text="Nametable"
                          selected="true"
                          fx:id="exportNAM"/>            
                          
                <CheckBox text="Palette"
                          selected="true"
                          fx:id="exportPAL"/>          

            </VBox>

        </HBox>



        <HBox spacing="10">

            <Label text="Export Name:" style="-fx-font-size: 20px"/>
            <TextField fx:id="exportName" text=""/>

        </HBox>


         <HBox spacing="10">

         <Button text="Export"
                GridPane.rowIndex="0"
                GridPane.columnIndex="3"
                onAction="#handleExport"
                style="-fx-font-size: 20px"/>

          <VBox alignment="center">       
            <Label text="Export Status: " 
                    style="-fx-font-size: 20px"/>
          </VBox>

         <VBox alignment="center">
            <Label text="..."
                    fx:id="exportStatus"/>
         </VBox>

         </HBox>


    </VBox>    
   

</GridPane>